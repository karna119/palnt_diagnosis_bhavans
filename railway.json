{
    "services": {
        "backend": {
            "name": "plant-diagnosis-backend",
            "source": {
                "root": "."
            },
            "build": {
                "dockerFilePath": "Dockerfile.backend"
            },
            "deploy": {
                "healthcheckPath": "/health",
                "healthcheckTimeout": 120,
                "restartPolicyType": "ON_FAILURE"
            }
        },
        "frontend": {
            "name": "plant-diagnosis-frontend",
            "source": {
                "root": "frontend"
            },
            "deploy": {
                "healthcheckPath": "/",
                "healthcheckTimeout": 120,
                "restartPolicyType": "ON_FAILURE"
            }
        }
    }
}